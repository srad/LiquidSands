  <logger name="HLogger" additivity="false">
    <level value="DEBUG" />
  	<appender-ref ref="logfile" ></appender-ref>
  </logger>

  <root><priority value="DEBUG" />
    <appender-ref ref="console" ></appender-ref>
    <appender-ref ref="logfile" ></appender-ref>
 <!--
 <appender-ref ref="chainsaw" ></appender-ref> 
 -->
  </root>

</log4j:configuration>
